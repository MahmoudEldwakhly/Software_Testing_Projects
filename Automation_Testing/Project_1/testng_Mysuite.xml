<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="MySuite">

    <!-- First package -->
    <test name="TestPackageOne">
        <packages>
            <package name="packageOne_testng"/>
        </packages>
    </test>

    <!-- Second package -->
    <test name="TestPackageTwo">
        <packages>
            <package name="packageTwo_testng"/>
        </packages>
    </test>

    <!-- A specific test class inside TestCases package -->
    <test name="RegisterUserTest">
        <classes>
            <class name="testCases.RegisterUserTest"/>
        </classes>
    </test>

    <!-- Whole TestCases package -->
    <test name="TestCases">
        <packages>
            <package name="testCases"/>
        </packages>
    </test>

</suite>
